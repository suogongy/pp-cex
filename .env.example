# Database Configuration
MYSQL_ROOT_PASSWORD=root123
MYSQL_USER=cex_user
MYSQL_PASSWORD=cex_password
MYSQL_REPLICATION_USER=repl_user
MYSQL_REPLICATION_PASSWORD=repl_password

# Redis Configuration
REDIS_PASSWORD=redis123

# RocketMQ Configuration
ROCKETMQ_NAMESRV_ADDR=rocketmq-nameserver:9876

# Nacos Configuration
NACOS_SERVER_ADDR=nacos:8848
NACOS_NAMESPACE=cex-dev
NACOS_GROUP=DEFAULT_GROUP

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080
NEXT_PUBLIC_CHAIN_ID=1
NEXT_PUBLIC_NETWORK_ID=1

# WalletConnect Configuration
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_must_be_at_least_32_characters_long
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Google 2FA Configuration
GOOGLE_2FA_SECRET=your_google_2fa_secret_here

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=your_email@gmail.com

# SMS Configuration
SMS_API_KEY=your_sms_api_key_here
SMS_API_SECRET=your_sms_api_secret_here
SMS_PHONE_NUMBER=your_sms_phone_number_here

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
BSC_RPC_URL=https://bsc-dataseed.binance.org/
POLYGON_RPC_URL=https://polygon-rpc.com

# Wallet Configuration
HOT_WALLET_PRIVATE_KEY=your_hot_wallet_private_key_here
COLD_WALLET_PRIVATE_KEY=your_cold_wallet_private_key_here

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Monitoring Configuration
GRAFANA_PASSWORD=grafana123
PROMETHEUS_RETENTION_TIME=200h

# Logging Configuration
LOG_LEVEL=INFO
LOKI_URL=http://loki:3100

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx
UPLOAD_PATH=/app/uploads

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Trading Configuration
TRADING_FEE_RATE=0.001
MIN_TRADE_AMOUNT=0.0001
MAX_TRADE_AMOUNT=1000
WITHDRAWAL_FEE_RATE=0.0005
MIN_WITHDRAWAL_AMOUNT=0.001

# Risk Control Configuration
RISK_CHECK_ENABLED=true
RISK_API_URL=http://risk-service:8007
RISK_API_KEY=your_risk_api_key_here

# Notification Configuration
NOTIFICATION_ENABLED=true
EMAIL_NOTIFICATION_ENABLED=true
SMS_NOTIFICATION_ENABLED=true
PUSH_NOTIFICATION_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/app/backups
